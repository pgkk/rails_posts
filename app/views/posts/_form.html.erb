<%= form_for @post do |f|%>
  <%= f.label :title , '标题'%><br/>
  <%= f.text_field :title %>

  <br/><br/>
  <%= f.label :content, "内容" %><br/>
  <%= f.text_area :content , 'rows' => '20', 'cols' => '80' %>

  <br/><br/>
  <%= f.submit "提交"%>&nbsp;
  <%= link_to "返回",posts_path, 'style' => 'font-size:12px' %>
<% end %>