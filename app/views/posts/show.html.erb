<%= render :partial => "text", :locals => {:post => @post} %>
<br/>
<%=link_to "编辑", edit_post_path(@post)%>&nbsp;
<%=link_to "返回", posts_url%>
<br/>
<h2>评论</h2>
<%@post.comments.each do |comment|%>
  <div style="margin-top:3px;">
    <h4 style="border-bottom:1px dashed #eee;">
      Commented&nbsp;
        <span style="font-size:12px;">
          <%= time_ago_in_words(comment.created_at)%>
        </span>
    </h4>
    <p style="font-size:12px;color:#444;">
      <%= comment.content %>
    </p>
  </div>
<% end%>

<%= form_for [@post,Comment.new] do |f|%>
  <%= f.label :content, "内容："%><br/>
  <%= f.text_area :content , 'rows' => '8', 'cols' => '50'%>
  <br/>
  <%= f.submit "添加评论"%>&nbsp;
  <%=link_to "返回", posts_url%>
<% end %>

